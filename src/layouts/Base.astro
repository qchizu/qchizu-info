---
interface Props {
  title: string;
  description?: string;
}

const { title, description = '全国Q地図は、国土地理院などの地図タイルを重ね合わせて閲覧できるWebGISサイトです。' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title === '全国Q地図' ? title : `${title} | 全国Q地図`}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- OGP -->
    <meta property="og:title" content={title === '全国Q地図' ? title : `${title} | 全国Q地図`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="全国Q地図" />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title === '全国Q地図' ? title : `${title} | 全国Q地図`} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #19448e;
    --color-primary-dark: #0f2d5e;
    --color-header: #e6b422;
    --color-text: #333333;
    --color-text-muted: #666666;
    --color-bg: #ffffff;
    --color-bg-muted: #f5f5f5;
    --color-border: #ddd;
    --color-link: #1967d2;
    --max-width: 860px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
    font-size: 16px;
    line-height: 1.8;
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-link);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
    color: #e60033;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.25;
    font-weight: bold;
  }

  h1 {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 1.26em;
  }

  h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1.26em;
    padding: 0.7em 1em;
    background-color: var(--color-header);
    border-radius: 4px;
  }

  h3 {
    font-size: 1.375rem;
    margin-top: 1.5rem;
    margin-bottom: 1.26em;
    padding-bottom: 0.5em;
    border-bottom: 3px solid var(--color-header);
  }

  h4 {
    font-size: 1.25rem;
    margin-top: 1.2rem;
    margin-bottom: 1.26em;
    padding: 0.5em 0.6em;
    border-top: 2px solid var(--color-border);
    border-bottom: 2px solid var(--color-border);
  }

  h5 {
    font-size: 1.125rem;
    margin-top: 1rem;
    margin-bottom: 1.26em;
    padding: 0.5em 0.6em;
    border-bottom: 2px solid var(--color-border);
  }

  h6 {
    font-size: 1rem;
    margin-top: 1rem;
    margin-bottom: 1.26em;
    padding: 0.5em 0.6em;
    border-bottom: 1px solid var(--color-border);
  }

  p {
    margin-bottom: 1.4em;
  }

  ul, ol {
    margin-bottom: 1.4em;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5em;
  }
</style>
