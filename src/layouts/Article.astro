---
import Base from './Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  title: string;
  description: string;
  date: Date;
  type?: 'page' | 'guide' | 'post';
  slug?: string;
  toc?: boolean;
  headings?: Heading[];
}

const { title, description, date, type = 'post', slug, toc = true, headings = [] } = Astro.props;
const h2Headings = headings.filter((h) => h.depth === 2);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Base title={title} description={description}>
  <Header />
  <div class="page-layout">
    <Sidebar currentSlug={slug} currentType={type} />
    <main>
      <article class={`article article-${type}`}>
        <header class="article-header">
          {type === 'post' && (
            <time class="date-prominent" datetime={date.toISOString()}>
              {formatDate(date)}
            </time>
          )}
          <h1>{title}</h1>
          {type === 'guide' && (
            <time class="date-subtle" datetime={date.toISOString()}>
              更新: {formatDate(date)}
            </time>
          )}
        </header>
        <div class="article-content">
          {toc && h2Headings.length >= 2 && (
            <nav class="toc">
              <h2 class="toc-title">目次</h2>
              <ol>
                {h2Headings.map((h) => (
                  <li><a href={`#${h.slug}`}>{h.text}</a></li>
                ))}
              </ol>
            </nav>
          )}
          <slot />
        </div>
        {type === 'guide' && (
          <footer class="article-footer">
            <time datetime={date.toISOString()}>
              最終更新: {formatDate(date)}
            </time>
          </footer>
        )}
      </article>
    </main>
  </div>
  <Footer />
</Base>

<style>
  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--theme-color);
  }

  .article-header h1 {
    font-size: 1.6rem;
    line-height: 1.4;
    margin: 0;
    padding: 0;
    background: none;
    border: none;
    color: #333;
  }

  /* post: 日付を目立たせる */
  .date-prominent {
    display: block;
    font-size: 1rem;
    font-weight: bold;
    color: var(--theme-color);
    margin-bottom: 0.5rem;
  }

  /* guide: 日付を控えめに */
  .date-subtle {
    display: block;
    font-size: 0.8rem;
    color: #999;
    margin-top: 0.5rem;
  }

  /* page: 日付なし（CSSで特別なスタイルは不要） */

  .article-content {
    line-height: 1.8;
  }

  .toc {
    background: #fff;
    border: 1px solid #e8e8e8;
    padding: 1.2rem 1.5rem;
    margin-bottom: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .toc-title {
    font-size: 1rem;
    margin: 0 0 0.5rem;
    padding: 0;
    background: none;
    border: none;
    color: #333;
  }

  .toc ol {
    list-style: decimal;
    margin: 0;
    padding: 0 0 0 1.5rem;
  }

  .toc li {
    margin: 0.3rem 0;
  }

  .toc a {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .toc a:hover {
    color: var(--theme-color);
    text-decoration: underline;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    color: #999;
    font-size: 0.85rem;
  }

  .article-content :global(pre) {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1.4em;
  }

  .article-content :global(code) {
    font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
    font-size: 0.875em;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--theme-color);
    padding-left: 1rem;
    margin: 1.4em 0;
    color: #666;
  }

  .article-content :global(img) {
    margin: 0.5rem 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.4em;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid #ddd;
    padding: 0.5rem;
    text-align: left;
  }

  .article-content :global(th) {
    background-color: #f5f5f5;
  }
</style>
