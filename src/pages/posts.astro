---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';

const articles = await getCollection('articles');
const posts = articles.filter((article) => article.data.type === 'post');
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Base title="ブログ" description="全国Q地図の技術記事・ブログ一覧です。">
  <Header />
  <div class="page-layout">
    <Sidebar currentType="post" />
    <main>
      <h1>ブログ</h1>
      <p class="count">全 {posts.length} 記事</p>
      <ul class="article-list">
        {sortedPosts.map((post) => (
          post.data.title && (
            <li>
              <time class="date" datetime={post.data.date.toISOString()}>
                {formatDate(post.data.date)}
              </time>
              <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/${post.id}`} class="title">{post.data.title}</a>
            </li>
          )
        ))}
      </ul>
    </main>
  </div>
  <Footer />
</Base>

<style>
  h1 {
    margin-bottom: 0.5rem;
  }

  .count {
    color: #999;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .article-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .article-list li {
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .article-list li:first-child {
    border-top: 1px solid #eee;
  }

  .date {
    font-size: 0.9rem;
    color: var(--theme-color);
    font-weight: bold;
  }

  .title {
    font-size: 1.1rem;
    font-weight: bold;
    line-height: 1.4;
  }

  @media (min-width: 640px) {
    .article-list li {
      flex-direction: row;
      align-items: baseline;
      gap: 1.5rem;
    }

    .date {
      min-width: 150px;
    }
  }
</style>
